<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme with Glassmorphism -->
    <style name="Base.Theme.ABB" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/abb_primary_dark</item>
        <item name="colorPrimaryVariant">@color/abb_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/abb_accent_dark</item>
        <item name="colorSecondaryVariant">@color/abb_accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        
        <!-- Glassmorphism background for dark theme -->
        <item name="android:windowBackground">@color/glass_bg_dark_start</item>
    </style>

    <style name="Theme.ABB" parent="Base.Theme.ABB" />
    
    <!-- Glassmorphism Card Style for Dark Theme -->
    <style name="GlassCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/glass_surface_dark</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeColor">@color/glass_border</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <style name="CodeTextStyle">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textColor">#E0E0E0</item>
    </style>
</resources>
