<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearchText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/replace_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etReplaceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <RadioGroup
        android:id="@+id/rgReplaceScope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/rbReplaceAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/replace_all"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rbReplaceInRoutine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/replace_in_routine" />

        <RadioButton
            android:id="@+id/rbReplaceInModule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/replace_in_module" />

    </RadioGroup>

    <LinearLayout
        android:id="@+id/groupRoutineSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:text="@string/replace_routine_scope_hint"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRoutineStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:text="@string/no_routines_found" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOpenRoutineSelector"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_routines" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupModuleSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:text="@string/replace_module_scope_hint"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvModuleStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:text="@string/no_modules_found" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOpenModuleSelector"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_modules" />

    </LinearLayout>

</LinearLayout>
