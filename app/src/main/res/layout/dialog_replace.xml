<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/search_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearchText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/replace_hint">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etReplaceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <RadioGroup
        android:id="@+id/rgReplaceScope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/rbReplaceAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/replace_all"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rbReplaceInRoutine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/replace_in_routine" />

        <RadioButton
            android:id="@+id/rbReplaceInModule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/replace_in_module" />

    </RadioGroup>

    <LinearLayout
        android:id="@+id/groupRoutineSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:text="@string/replace_routine_scope_hint"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRoutineEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:text="@string/no_routines_found"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRoutineCandidates"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scrollbars="vertical"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRoutineSelectAll"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_all" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRoutineDeselectAll"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deselect_all" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupModuleSelection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:text="@string/replace_module_scope_hint"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvModuleEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:text="@string/no_modules_found"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvModuleCandidates"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scrollbars="vertical"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnModuleSelectAll"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_all" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnModuleDeselectAll"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deselect_all" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
